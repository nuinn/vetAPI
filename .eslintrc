{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 14,
      "sourceType": "module"
    },
    "rules": {
      "linebreak-style": 0,
      "no-underscore-dangle": 0,
      "radix": 0,
      "import/extensions": [
        "error",
        {
            "js": "ignorePackages"
        }
      ],
      "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
    }
  }